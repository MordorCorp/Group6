            <TableView fx:id="clientTable" prefHeight="300.0" prefWidth="679.0" tableMenuButtonVisible="true">
              <columns>
                <TableColumn fx:id="colClientId" maxWidth="700.0" prefWidth="20.0" text="ID" />
