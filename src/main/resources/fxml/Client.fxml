                        <DropShadow blurType="ONE_PASS_BOX" color="#1965d0" />
                     </effect>
                  </Button>
                  <Button fx:id="saveClient" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#saveClient" prefHeight="30.0" prefWidth="75.0" styleClass="btnGreen" text="Save" textFill="WHITE">
